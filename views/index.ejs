<!-- Front-end client side -->

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebChat Project</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <h2>Welcome to the WebChien Chat</h2>
    <!-- Both lists here: from new messages & from bd historic -->
    <ul class="messages" id="messages">
      <% if (allMessages) { %>
        <% allMessages.forEach((msg) => { %>
          <li data-testid="message">
            <%= `${msg.dateFormat} - ${msg.nickname}: ${msg.chatMessage}`%>
          </li>
       <% }) %>
      <% } %>
    </ul>
    <section class="chat-inputs">
      <div class="nickname-stuff">
        <input data-testid="nickname-box" type="text" id="nickname-input" name="nickname" placeholder="Enter your nickname here">
        <button type="button" data-testid="nickname-save" id="nickname-save" type="button">Save nickname</button>
      </div>
      <div class="message-stuff">
        <input data-testid="message-box" type="text" id="message-input" name="message" placeholder="Digit your message here">
        <button type="button" data-testid="send-button" id="send">Send message</button>
      </div>
    </section>
    <!-- if using form tag, remember type="button" and preventDefault
    so as not to default to cleaning screen and method get -->
  </body>
  <!-- Connect with client.js and right port -->
  <script src="http://localhost:3000/socket.io/socket.io.js"></script>
  <script defer src="/client.js"></script>
